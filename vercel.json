{
  "version": 2,
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "client/dist/public",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://your-render-backend-url.onrender.com"
  }
}
